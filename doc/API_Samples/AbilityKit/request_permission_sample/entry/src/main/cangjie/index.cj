// 此处代码可添加在依赖项定义中
var resultCallback = {
    errorCode: Option<BusinessException>, data: Option<PermissionRequestResult> => match (errorCode) {
        case Some(e) => Hilog.info(0, "CangjieSample","permissionResultCallBack request error: errcode is ${e.code}")
        case _ => match (data) {
            case Some(value) => for (i in (0..value
                    .permissions
                    .size)) {
                Hilog.info(0, "CangjieSample","CallBack: ${value.permissions[i]} - ${value.authResults[i]}")
            }
            case _ => Hilog.info(0, "CangjieSample","permissionResultCallBack request error: data is null")
        }
    }
}

@Entry
@Component
class EntryView {
    @State
    var message: String = "Hello World"

    func build() {
        Row {
            Column {
                Text(this.message)
                    .fontSize(50)
                    .fontWeight(FontWeight.Bold)
                    .onClick {
                        evt =>
                        this.message = "Hello Cangjie"
                        let ctx = globalAbilityContext.getOrThrow()
                        let atManager = AbilityAccessCtrl.createAtManager()
                        let permissionList = ["ohos.permission.CAMERA"]
                        atManager.requestPermissionsFromUser(ctx, permissionList, resultCallback)
                    }
            }.width(100.percent)
        }.height(100.percent)
    }
}
