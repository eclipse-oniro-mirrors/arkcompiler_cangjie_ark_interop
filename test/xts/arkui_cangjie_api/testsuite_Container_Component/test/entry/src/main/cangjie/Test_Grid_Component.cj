package ohos_app_cangjie_entry

import kit.PerformanceAnalysisKit.Hilog
import std.unittest.testmacro.*
import ohos.ui_test.*

@Test
class Test_Grid_Component {
    prop driver: Driver {
        get() {
            OpenHarmonyTestRunner.driver
        }
    }
    protected override func beforeAll() {
        driver.delayMs(3000)
        let scrollBar: Component = driver.findComponent(On().onType("Scroll")).getOrThrow()
        driver.delayMs(3000)
        scrollBar.scrollSearch(On().id("View_Grid")).getOrThrow().click()
        driver.delayMs(1000)
    }

    protected override func afterAll() {
        driver.delayMs(1000)
        driver.pressBack()
    }

    
    /*
    * @tc.number    : Sub_Cangjie_UIKit_Test_Grid_Component_0100
    * @tc.name      : Test_Grid_Component_001
    * @tc.desc      : test UIKit Grid
    * @tc.size      : MediumTest
    * @tc.type      : Function
    * @tc.level     : Level 0
    */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Grid_Component_001() {
        Hilog.info(0, "","cangjietest", "[Test_Grid_Component_001] start")
        // 1、获取页面中id为GridBasis的组件信息
        let Inspector = getInspectorByKey("GridBasis")
        Hilog.info(0, "","cangjietest", "[Test_Grid_Component_001] Inspector value: ${Inspector}")
        // 2、将组件信息string转换为json
        let obj = JsonValue.fromStr(Inspector).asObject()
        let aar = Inspector.split("useShadowBatching")
        for (a in aar) {
            Hilog.info(0, "","cangjietest", "[Test_Grid_Component_001]: ${a}")
        }
        //3、读取组件信息json中的columnsTemplate
        let obj_columnsTemplate = obj
            .get("$attrs")
            .getOrThrow()
            .asObject()
            .get("columnsTemplate")
            .getOrThrow()
            .toString()
        Hilog.info(0, "","cangjietest", "[Test_Grid_Component_001] columnsTemplate value: ${obj_columnsTemplate}")
        @Expect(obj_columnsTemplate, "\"1fr 1fr 1fr 1fr 1fr\"")
    }

    
