package ohos_app_cangjie_entry

import kit.PerformanceAnalysisKit.Hilog
import std.unittest.testmacro.*
import ohos.ui_test.*

@Test
class Test_Scroll2_Component {
    prop driver: Driver {
        get() {
            OpenHarmonyTestRunner.driver
        }
    }
    protected override func beforeAll() {
        driver.delayMs(3000)
        let scrollBar: Component = driver.findComponent(On().onType("Scroll")).getOrThrow()
        driver.delayMs(3000)
        scrollBar.scrollSearch(On().id("View_Scroll2")).getOrThrow().click()
        driver.delayMs(1000)
    }

    protected override func afterAll() {
        driver.delayMs(1000)
        driver.pressBack()
    }

    
    /*
    * @tc.number    : Sub_Cangjie_UIKit_Test_Scroll2_Component_0100
    * @tc.name      : Test_Scroll2_Component_001
    * @tc.desc      : test UIKit Scroll
    * @tc.size      : MediumTest
    * @tc.type      : Function
    * @tc.level     : Level 0
    */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Scroll2_Component_001() {
        let button = driver.findComponent(On().id("ScrollArea"))
        button.getOrThrow().click()
        driver.delayMs(500)
        let button2 = driver.findComponent(On().id("ListItem"))
        let text = button2.getOrThrow().getText()
        @Expect(text,"5")
    }
}
