package ohos_app_cangjie_entry

import kit.PerformanceAnalysisKit.Hilog
import std.unittest.testmacro.*
import ohos.ui_test.*

@Test
class Test_ScrollBar_Component {
    prop driver: Driver {
        get() {
            OpenHarmonyTestRunner.driver
        }
    }

    protected override func beforeAll() {
        driver.delayMs(3000)
        driver.findComponent(On().onType("Scroll")).getOrThrow().scrollSearch(On().id("View_ScrollBar")).getOrThrow().click()
        driver.delayMs(1000)
    }

    protected override func afterAll() {
        driver.delayMs(1000)
        driver.pressBack()
    }

    
    /*
    * @tc.number    : Sub_Cangjie_UIKit_ScrollBar_Component_0100
    * @tc.name      : Test_ScrollBar_Component_001
    * @tc.desc      : test UIKit ScrollBar
    * @tc.size      : MediumTest
    * @tc.type      : Function
    * @tc.level     : Level 0
    */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_ScrollBar_Component_001() {
        let Inspector = getInspectorByKey("ScrollBar_component")
        let aar = Inspector.split("useShadowBatching")
        let obj = JsonValue.fromStr(Inspector).asObject()
        for (a in aar) {
            Hilog.info(0,"",   "cangjietest", "ScrollBar_component]: ${a}")
        }
        let color = obj.get("$attrs").getOrThrow().asObject().get("id").getOrThrow().toString()
        @Expect(color, "\"ScrollBar_component\"")
    }

    
    /*
    * @tc.number    : Sub_Cangjie_UIKit_ScrollBar_Component_0200
    * @tc.name      : Test_ScrollBar_Component_002
    * @tc.desc      : test UIKit ScrollBar
    * @tc.size      : MediumTest
    * @tc.type      : Function
    * @tc.level     : Level 0
    */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_ScrollBar_Component_002() {
        let Inspector = getInspectorByKey("ScrollBar_component")
        let obj = JsonValue.fromStr(Inspector).asObject()
        let viewPort = obj.get("$attrs").getOrThrow().asObject().get("direction").getOrThrow().toString()

        @Expect(viewPort, "\"ScrollBarDirection.Vertical\"")
    }
}
