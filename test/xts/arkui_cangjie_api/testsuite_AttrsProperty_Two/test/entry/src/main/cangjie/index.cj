@Entry
@Component
class EntryView {
    func build() {
        Scroll() {
            Column {
                ForEach(
                    views,
                    itemGeneratorFunc: {
                        viewName: String, _: Int64 => Button(viewName)
                            .fontSize(16)
                            .width(100.percent)
                            .height(25)
                            .id(viewName)
                            .borderRadius(10)
                            .onClick {
                                ClickEvent => getUIContext().getRouter().pushUrl(url: viewName)
                            }
                    }
                )
            }.width(100.percent).margin(top: 5)
        }
    }
}
