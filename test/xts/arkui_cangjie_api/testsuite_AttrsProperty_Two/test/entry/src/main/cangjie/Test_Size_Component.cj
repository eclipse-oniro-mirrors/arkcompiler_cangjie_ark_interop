package ohos_app_cangjie_entry

import kit.PerformanceAnalysisKit.Hilog
import std.unittest.testmacro.*
import ohos.ui_test.*
import std.unittest.testmacro.*
import std.unittest.*
import std.unittest.common.*

@Test
class Test_Size_Component {
    prop driver: Driver {
        get() {
            OpenHarmonyTestRunner.driver
        }
    }
    protected override func beforeAll() {
        driver.delayMs(3000)
        let scrollBar: Component = driver.findComponent(On().onType("Scroll")).getOrThrow()
        driver.delayMs(3000)
        scrollBar.scrollSearch(On().id("View_Size")).getOrThrow().click()
        driver.delayMs(1000)
    }

    protected override func afterAll() {
        driver.delayMs(1000)
        driver.pressBack()
    }

    /*
     * @tc.number：SUB_ACE_AttrsProperty_Cangjie_ArkUI_001
     * @tc.name： Test_Size_0100_Component
     * @tc.desic：width and height,padding,margin
     */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Size_0100_Component() {
        let Inspector = getInspectorByKey("Test_Text00")
        let obj = JsonValue.fromStr(Inspector).asObject()
        let obj_width = obj.get("$attrs").getOrThrow().asObject().get("width").getOrThrow().toString()
        let obj_height = obj.get("$attrs").getOrThrow().asObject().get("height").getOrThrow().toString()
        let obj_padding = obj.get("$attrs").getOrThrow().asObject().get("padding").getOrThrow().toString()
        let obj_margin = obj.get("$attrs").getOrThrow().asObject().get("margin").getOrThrow().toString()
        @Expect(obj_width, "\"100.00vp\"")
        @Expect(obj_height, "\"100.00vp\"")
        @Expect(obj_padding, "\"5.00vp\"")
        @Expect(obj_margin, "\"5.00vp\"")
    }

    /*
     * @tc.number：SUB_ACE_AttrsProperty_Cangjie_ArkUI_002
     * @tc.name： Test_Size_0200_Component
     * @tc.desic：width and height,padding,margin
     */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Size_0200_Component() {
        let Inspector = getInspectorByKey("Test_Text01")
        let obj = JsonValue.fromStr(Inspector).asObject()
        let obj_width = obj.get("$attrs").getOrThrow().asObject().get("width").getOrThrow().toString()
        let obj_height = obj.get("$attrs").getOrThrow().asObject().get("height").getOrThrow().toString()
        let obj_padding = obj.get("$attrs").getOrThrow().asObject().get("padding").getOrThrow().toString()
        let obj_margin = obj.get("$attrs").getOrThrow().asObject().get("margin").getOrThrow().toString()
        @Expect(obj_width, "\"100.00vp\"")
        @Expect(obj_height, "\"100.00vp\"")
        @Expect(obj_padding, "\"5.00vp\"")
        @Expect(obj_margin, "\"{\\\"top\\\":\\\"5.00vp\\\",\\\"right\\\":\\\"5.00vp\\\",\\\"bottom\\\":\\\"10.00vp\\\",\\\"left\\\":\\\"5.00vp\\\"}\"")
    }

    /*
     * @tc.number：SUB_ACE_AttrsProperty_Cangjie_ArkUI_003
     * @tc.name： Test_Size_0300_Component
     * @tc.desic：width and height,padding,margin
     */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Size_0300_Component() {
        let Inspector = getInspectorByKey("Test_Text02")
        let obj = JsonValue.fromStr(Inspector).asObject()
        let obj_width = obj.get("$attrs").getOrThrow().asObject().get("width").getOrThrow().toString()
        let obj_height = obj.get("$attrs").getOrThrow().asObject().get("height").getOrThrow().toString()
        let obj_padding = obj.get("$attrs").getOrThrow().asObject().get("padding").getOrThrow().toString()
        let obj_margin = obj.get("$attrs").getOrThrow().asObject().get("margin").getOrThrow().toString()
        @Expect(obj_width, "\"100.00vp\"")
        @Expect(obj_height, "\"100.00vp\"")
        @Expect(obj_padding, "\"5.00vp\"")
        @Expect(obj_margin, "\"5.00vp\"")
    }

    /*
     * @tc.number：SUB_ACE_AttrsProperty_Cangjie_ArkUI_004
     * @tc.name： Test_Size_0400_Component
     * @tc.desic：size
     */
    @TestCase
    @Tag[APILevel12, TestLevel0]
    func Test_Size_0400_Component() {
        let Inspector = getInspectorByKey("Test_Text03")
        let obj = JsonValue.fromStr(Inspector).asObject()
        let obj_size = obj.get("$attrs").getOrThrow().asObject().get("size").getOrThrow().toString()
        @Expect(obj_size, "{\"width\":\"100.00vp\",\"height\":\"100.00vp\"}")
    }
}
